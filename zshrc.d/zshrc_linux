export PATH=~/.cargo/bin/:$PATH
export PATH=~/.npm-global/bin:$PATH

alias hyprconf="nvim ~/.config/hypr/hyprland.conf"

# this is for cuda 13.0
# export PATH=/opt/cuda/bin/:$PATH
#
# This is for cuda 12.6
export CUDA_HOME=/opt/cuda-12.6
export PATH=/opt/cuda-12.6/bin:$PATH
export LD_LIBRARY_PATH=/opt/cuda-12.6/lib64:$LD_LIBRARY_PATH

# when compiling packages, use all cores
export MAKEFLAGS="-j$(nproc)"

# using outdated gcc-13 (instead of gcc 15) as some cuda related packages need it
# export CC=/usr/sbin/gcc-13
# export CXX=/usr/sbin/g++-13

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

echo "[ -f /opt/miniconda3/etc/profile.d/conda.sh ] && source /opt/miniconda3/etc/profile.d/conda.sh
